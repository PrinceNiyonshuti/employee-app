<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B489F">

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dash"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/bn_back"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Employee App"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#ffff"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Employee Details"
                android:textColor="#000"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Empl_Img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Names"
                        android:textSize="18sp"
                        android:textColor="#020101"
                        android:fontFamily="sans-serif"/>
                    <EditText
                        android:id="@+id/Empl_Names"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Employee Names"
                        android:textColorHint="#595656"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textSize="18sp"
                        android:textColor="#020101"
                        android:fontFamily="sans-serif"/>
                    <EditText
                        android:id="@+id/Empl_Mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Employee E-mail"
                        android:textColorHint="#595656"
                        android:textColor="#000000"
                        android:inputType="textEmailAddress"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textSize="18sp"
                        android:textColor="#020101"
                        android:fontFamily="sans-serif"/>
                    <EditText
                        android:id="@+id/Empl_Dept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Employee Department"
                        android:textColorHint="#595656"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="District"
                        android:textSize="18sp"
                        android:textColor="#020101"
                        android:fontFamily="sans-serif"/>
                    <EditText
                        android:id="@+id/Empl_Distr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Employee Districts"
                        android:textColorHint="#595656"
                        android:textColor="#000000"
                        android:inputType="text"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="18sp"
                        android:textColor="#020101"
                        android:fontFamily="sans-serif"/>
                    <EditText
                        android:id="@+id/Empl_Pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Employee Names"
                        android:textColorHint="#595656"
                        android:textColor="#000000"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:background="#ffff"
                    android:gravity="center"
                    android:text="Update Details"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>